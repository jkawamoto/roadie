[Unit]
Description=Roadie Script Execution
Requires=fluentd.service
After=fluentd.service

[Service]
ExecStartPre=-/usr/bin/docker stop {{.Name}}
ExecStartPre=-/usr/bin/docker rm {{.Name}}
ExecStartPre=-/usr/bin/docker pull {{.Image}}
ExecStartPre=/usr/bin/curl -o /root/script.yml "http://metadata.google.internal/computeMetadata/v1/instance/attributes/script" -H "Metadata-Flavor: Google"
ExecStart=/usr/bin/docker run -i --name {{.Name}} -v /root/script.yml:/root/script.yml {{.Image}} {{.Options}} -c /root/script.yml
ExecStop=/usr/bin/docker stop {{.Name}}
Type=oneshot

[Install]
WantedBy=multi-user.target
